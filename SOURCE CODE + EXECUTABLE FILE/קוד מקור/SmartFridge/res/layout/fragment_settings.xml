<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dcf4fa" >

    <TextView 
        android:id="@+id/settings_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="שם משתמש:"/>
    
    <EditText 
        android:id="@+id/settings_usernameValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/settings_username"/>
    
    <TextView 
        android:id="@+id/settings_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="דואר אלקטרוני:"
        android:layout_below="@id/settings_usernameValue"/>
    
    
    <EditText 
        android:id="@+id/settings_emailValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/settings_email"/>
   
    <TextView 
        android:id="@+id/settings_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/settings_emailValue"
        android:textColor="#000000"
        android:text="סיסמה:"/>
    
    <EditText 
        android:id="@+id/settings_passValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:password="true"
        android:layout_below="@id/settings_pass"/>
    
    
    <TextView 
        android:id="@+id/settings_ShoppingDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/settings_passValue"
        android:textColor="#000000"
        android:text="יום הקניות:"/>
    
    
    <Spinner 
        android:id="@+id/settings_shoppingDayValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/settings_ShoppingDay"
        android:prompt="@string/day_prompt"
        android:entries="@array/day_arrays"/>
    
    <Button 
        android:id="@+id/settings_saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="שמור"/>

</RelativeLayout>